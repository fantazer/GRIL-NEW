@import 'rupture'
@import "variable/_function.styl"
@import "variable/_ie.styl"
@import "variable/_default.styl"
@import "variable/config/_color.styl"
@import "variable/_helper.styl"
@import "variable/config/_typography.styl"
@import "variable/config/_btn.styl"
@import "variable/config/_input.styl"
@import "../module/**/*"

body
	@extend .type--main
	font-family $v-font
	color $main-text-color
	line-height 1.4
	letter-spacing 0.01em


.scroll-template
	&::-webkit-scrollbar
		-webkit-appearance: none
		width: 4px
		height: 8px
		background: #DCDFE8
		border-radius: 4px
	&::-webkit-scrollbar-thumb
		border-radius: 4px
		background: $mark

.main-cont
	center(1250px,20px)

.main-cont-md
	center(640px,20px)

.page
	f()
	fl()
	min-height 100vh

.content
	+below(768px)
		padding: 30px 0
	padding: 80px 0 100px 0
	flex-grow 1
	position relative
	overflow: hidden
.content--clear
	padding-top: 0

.content--empty
	padding: 0

.content--gray
	background: #f7f7f7

.content--mid
	flex(mid)

.animate-hidden
	position absolute
	opacity: 0
	left -9999px
	top 0

.animate-show
	position initial
	opacity: 1
	left initial
	transition opacity .6s

// animate top menu
@keyframes slideInDown
	from
		transform: translate3d(0, -100%, 0)
		visibility: visible;
	to
		transform: translate3d(0, 0, 0)

.shrink
	position fixed!important
	top 0
	left 0
	width 100%
	margin 0
	z-index 100
	//animation:  slideInDown  1s 1 ease-in-out;
	.header-info__phone
		color white
	.header-main__logo
		+below(768px)
			width: 40px
		width: 70px
	.header-menu-wrap
		background: white
	.header-nav--add
		display: none
	//.header-menu
	.header-menu__call
		+below(1025px)
			position: static
			left initial
			transform translateX(0)
	.header-top-wrap
			display none
	.header-nav__el
		+below(1024px)
			&:first-child
				margin-left: 0
	.header-menu
		+below(768px)
			margin-left: 0
// error
.page-error
	flex(mid)
	fl()
	height: 100%
.page-error__title
	@extend .type--xl
	font-weight: 600
	margin-bottom: 20px
.page-error__img
	margin-bottom: 30px
.page-error__text
	@extend .type--md
	margin-bottom: 30px
.page-error__get
	@extend .btn--md
	@extend .btn--mark
// error === end

// modal
.modal-layer
	width: 100%
	//height: 100%
	//height: calc(var(--vh) * 100);
	position: fixed
	z-index 1000
	top 0
	left 0
	visibility: hidden
	transition all 1s // duration for fade
	opacity 0

.modal-layer-show
	visibility: visible
	opacity 1

.modal-cont
	width: 100%
	height: 100%
	position: relative
	max-height 100%
	overflow: auto

.modal-filter
	position: absolute
	top: 0
	left: 0
	background: #18191da1
	width: 100%
	height: 100vh
	min-height 100vh

.modal
	+below(640px)
		width: 100%
		box-shadow 0 0 0
	transform scale(.9) translateZ(0) translate3d(0, 0, 0)
	will-change: transform, opacity;
	backface-visibility: hidden
	position: absolute
	opacity 0
	transition transform .6s, opacity .8s
	width 350px
	left -9999px
	top -9999px
	.order__row
		margin-bottom: 20px
		border-bottom 0

.modal--lg
	+below(640px)
		width: 100%
	width 440px

.modal--xl
	+below(640px)
		width: 100%
	width 740px

.modal--xxl
	+below(640px)
		width: 100%
	width 940px

.modal-item
	+below(768px)
		.modal-content
			margin: 0
			br(0)
			width: 100%!important
		.modal-close
			border-radius 0 0px 0 60px

.modal-content
	+below(640px)
		height: 100%
		padding: 30px 20px
		//overflow-y scroll
		width: calc(100% - 40px)
	margin: 20px auto
	background: white
	position: relative
	padding: 40px
	br(25px)

.modal__show
	//max-height 100%
	opacity 1
	transform scale(1) translateZ(0) translate3d(0, 0, 0)
	position: relative
	z-index 1000
	left initial
	top initial
	transition transform .6s, opacity .8s
	will-change: transform, opacity
	margin auto

.modal-close
	position absolute
	size 50px
	top 0
	right: 0
	flex(mid)
	cp()
	tr()
	background-color $snow
	border-radius 0 25px 0 60px
	z-index 30
	&:hover
		background: $gray
	.icon
		size 10px
		margin-top: -5px
		margin-right: -10px


.modal-hide-animation
	transform scale(.9)
	opacity 0
	transition transform .6s, opacity .8s
.modal-open
	overflow: hidden
	overflow-y: scroll
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	width: 100%

.modal-wrap
	position: fixed
	width: 100%
	height: 100%
	overflow-y auto
	flex(mid)

.modal-title
	+below(768px)
		font-size: 20px
	margin-bottom: 20px
	text-align: center
	@extend .type--lg
	font-weight: 700

.modal-title--left
	text-align: left

.modal-title--clear
	margin-bottom: 0

.modal-text
	+below(768px)
		width: 100%
		font-size: 12px
	text-align: center
	margin: 10px auto 20px auto
	@extend .type--sm
	line-height: 1.6

.modal-text--clear
	margin: 0 auto

.modal-send
	@extend .btn--md
	@extend .btn--mark
	width: 100%

.modal-link
	color $mark
	border-bottom 1px dashed $mark
	display table
	cp()
	@extend .type--sm

.modal-link-wrap
	flex(between)
	margin-top: 20px
.modal-link--auth
	margin: 0
	margin-top: -10px
	margin-bottom: 20px
	cp()
.modal-content--dark
	background: black
	.modal-title
		color white
	.modal-text
		color white
.modal-img
	margin: 0 auto 20px auto
	flex(mid)
	max-width 80px

// review modal
.get-rating
	f()
	align-items: center
	.icon
		cp()
	margin-bottom: 20px
.get-rating-text
	+below(640px)
		font-size: 13px
	margin-right: 20px
	font-weight: 700

.star-el--active
	.icon
		fill $yellow!important

.star
	f()
	.icon
		size 20px
		cp()
		fill $border-color
.star-el
	margin-right: 5px
// review modal === end

.modal-bonus
	position relative
	//max-height 500px
	padding-right: 20px
	margin-right: -20px
	width calc(100% + 20px)

// modal === end


// cookie
.cookie
	position: fixed
	bottom 20px
	left 0
	width: 100%
	transform translateY(10px)
	opacity: 0
	z-index -1
	tr()
.cookie--active
	z-index 20
	opacity: 1
	transform translateY(0)
.cookie-wrap
	padding: 15px 20px
	br(20px)
	z-index 10
	background: white
	f()
	justify-content: space-between
	border 1px solid $border-color
	.icon
		&:hover
			fill black
		tr()
		size 14px
		margin-left: 10px
		fill $gray
		cp()
.cookie-text
	+below(640px)
		font-size: 10px
		line-height: 1.6
	width calc(100% - 30px)
	font-size: 12px
// cookie === end

// drop
.dropdown
	width: 100%
	display inline-block
	br(30px)
	transition all .3s
	position relative
	border 1px solid $border-color
	outline none!important
	background: #f6f6f6

.dropdown--light
	background: white


.dropdown--fix-md
	max-width 240px

.dropdown--lg
	.dropdown-current
		padding 20px 50px 20px 20px
.dropdown-current
	cursor pointer
	display block
	padding 10px 50px 10px 20px
	@extend .type--sm
	.icon
		position absolute
		top calc(50% - 5px)
		right 20px
		size 10px
		tr()
		fill $gray

.dropdown.active
	border-radius 20px 20px 0 0
	background: white
	.icon
		transform rotate(180deg)

.dropdown-menu
	+below(640px)
		max-height 150px
	position absolute
	background-color #fff
	width calc(100% + 2px)
	left -1px
	margin-top -1px
	border-radius 0 0 20px 20px
	overflow hidden
	display none
	max-height 250px
	overflow-y auto
	z-index 10
	border 1px solid $border-color
	@extend .scroll-template

.dropdown-menu--lg
	max-height 400px

.dropdown-menu__el
	padding 10px 20px
	cp()
	tr()
	border-bottom 1px solid $border-color
	@extend .type--sm
	display block
	&:last-child
		border 0
	&:hover
		background: white
		color $mark

.dropdown--empty
	border 0
	background: none
	.dropdown-current
		border 0
		padding: 0
		f()
		align-items center
		.icon
			margin-left: 6px
			position: static
			fill $mark
	.dropdown-menu
		width: 120px
		br(4px)
		margin-top: 6px
		bsh()
	.dropdown-menu__el
		&.active
			color $mark
// drop === end

// header
.header
	position: relative
	box-shadow: 0px 3px 8px #00000014;
	z-index 100
.header-top-wrap
	+below(1280px)
		background: white
		border-bottom 1px solid $border-color
	background: $snow
	+above(1281px)
		.logo
			display none
	+below(1280px)
		.soc-row
			display none
//.main-cont
.header-top
	+below(768px)
		height: 50px
	height: 60px
	flex(between)
.logo
	+below(1280px)
		width: 200px
	+below(768px)
		max-width 140px
	margin-right: 3%
	max-width 190px


.header-location
	+below(1024px)
		display: none
	margin-right: 20px
.header-info
	f()
	cp()
	align-items: center
	margin-right: 5%
	position relative
	.soc-row
		margin-left: 10px
.header-info__icon
	margin-right: 10px
	flex(mid)
	.icon
		size 24px
		fill $mark
.header-info__val
	+below(640px)
		font-size: 18px
	white-space nowrap
	color $dark
	@extend .type--md
	margin-bottom: 2px
	span
		font-size: 15px
		font-weight: 400
.header-info__text
	color $gray
	@extend .type--xs
	font-weight 500
	white-space nowrap
.header-contact
	+below(1024px)
		margin-right: 30px
	+below(760px)
		display: none
.header-auth
	+below(760px)
		margin-left: 10px
	f()
	cp()
	align-items: center
	margin-left auto
	.icon
		+below(760px)
			margin-right: 0
			size 28px
		margin-right: 10px
		size 20px
		fill $mark

.header-callback
	+above(760px)
		display none
	f()
	cp()
	margin-left auto
	.icon
		margin-right: 10px
		size 28px
		fill $mark

.header-top-nav
	+below(1280px)
		display none
	flex(between)
	margin-left auto
	margin-right: 20px

.header-top-nav__el
	margin: 0 7px
	color $gray

.header-auth-state
	+below(1280px)
		display none
	cp()
	tr(all)
	&:hover
		color $mark
.slide-header-auth
	color white
	f()
	align-items center
	margin-bottom: 30px
	.icon
		margin-right: 10px
		size 20px
		fill $mark

.slide-header-auth-state
	position: relative
	color white
	font-weight: 500
	display: block
//
.slide-header-location
	flex(mid)
	fl()
.slide-header-info
	f()
	cp()
	align-items: center
	margin-right: 5%
	margin-bottom: 10px
	.divider
		color $snow
		@extend .type--md
		font-weight 600
		display: inline-block
		margin: 0 5px
.slide-header-info__icon
	margin-right: 10px
	flex(mid)
	.icon
		size 28px
		fill $mark
.slide-header-info__val
	white-space nowrap
	color white
	@extend .type--lg
	font-weight 700
	a
		color white
		display: block
		margin-bottom: 5px
.slide-header-info__text
	color $gray
	@extend .type--sm
	font-weight 500
.slide-header-contact
	margin-top: 30px
.header-menu-wrap
	//+below(768px)
	//	overflow-x scroll
	position: relative
.header-menu
	+below(1280px)
		.logo
			display none
		height: 60px
	+below(768px)
		margin-right: -20px
		margin-left: -20px
	height: 80px
	flex(between)
.header-menu__call
	padding: 0 15px 0 0
	position absolute
	left -9999px
	transform translateX(-100%)
	transition transform .6s
	.icon
		size 24px
		fill $mark
.header-nav
	+below(1280px)
		justify-content space-between
		width: 100%
		margin-right: 0
	+below(768px)
		justify-content initial
		overflow auto

	f()
	height: 100%
	width: 65%
	align-items: center
	justify-content: space-around
	margin-right: 20px
.header-nav__el
	+below(640px)
		font-size: 14px
	color $dark
	br(20px)
	tr(all)
	@extend .type--md
	font-weight: 700
	white-space nowrap
	margin-right: 15px
	height: 100%
	f()
	align-items center
	&:hover
		color $mark
	&.active
		color $mark
	&:first-child
		+below(768px)
			margin-left: 20px
	&:last-child
		margin-right: 0
		+below(768px)
			&:after
				content ''
				width: 20px
				height: 1px
				display block
.header-nav__el--more
	+above(769px)
		display none
.header-nav__el--mark
	color $mark
	border 1px solid $mark
	margin: 0 10px
.header-nav--add
	.header-nav__el
		color $gray

.header-nav__more
	+below(1440px)
		font-size: 14px
	+above(769px)
		position relative
		cp()
		white-space nowrap
	+below(768px)
		display none
	margin-right: 15px
	.dropdown
		+above(768px)
			bsh()
		br(8px)
		@extend .type--md
		border 1px solid transparent
		min-width 130px
		&.active
			border 1px solid $mark
			.dropdown-current
				color $mark
			.icon
				fill $mark
			.dropdown-current__val
				border-color $mark
	.dropdown-current
		padding: 10px 30px 10px 15px
		font-weight: 700
		text-align center
		@extend .type--md
		.icon
			fill black
			right 10px
	.dropdown-current__val
		border-bottom 1px dashed black
		display inline-block
	.dropdown-menu
		max-height initial
		width 200px
		left calc(-50% + 26px)
		top calc(100% + 10px)
		br(8px)
	.dropdown-menu__el
		font-weight: 700
.cart-wrap
	+below(1280px)
		margin-left 10px
	+below(760px)
		display none
	f()
	cp()
	margin-left: 20px
	align-items: center
	.icon--close
		display: none
	position relative
.cart-cost
	+below(760px)
		display none
	margin-right: 20px
	color $dark
	@extend .type--md
	font-weight 700
.cart
	+below(768px)
		size 40px
	+below(760px)
		display none
	flex(mid)
	round()
	position: relative
	size 50px
	background: $mark
	tr()
	.icon
		+below(768px)
			size 20px
		size 28px
	&:hover
		//background: lighten($mark,15)
		background: $mark

.cart-mobile
	+above(760px)
		display none
	size 60px
	background: $mark
	position: fixed
	bottom 20px
	right: 20px
	round()
	flex(mid)
	fl()
	.icon
		size 26px
.cart-mobile-cost
	background: white
	font-size: 12px
	font-weight: 700
	padding: 2px 5px
	br(10px)
	white-space nowrap
	margin: 3px 0 -3px 0
	border 1px solid $mark
.cart-val
	position: absolute
	top 0
	right 0
	font-size: 9px
	font-weight 600
	size 20px
	flex(mid)
	round()
	background: $dark
	color white
.head-toggle
	flex(mid)
	cp()

	margin-right: 10px
	+above(1281px)
		display: none
	.icon
		size 22px
		fill black
	.icon-close
		display: none

.head-toggle--open
	.icon-close
		display: block
	.icon-open
		display: none

.slide-menu
	+above(1281px)
		display: none !important
	+below(768px)
		height: calc(100% - 50px)
		top 50px
	+below(480px)
		width: 100%
	background: $dark
	position: fixed
	height: calc(100% - 60px)
	z-index 1250
	top 60px
	left 0
	width: 320px
	transform translateX(-110%)
	tr(all)
	bsh()
	padding: 40px 20px
	.header-location
		display block
	.header-info__val
		color white
.slide-menu--open
	transform translateX(0%)
	overflow-y: auto
.slide-menu__list
	margin-bottom: 30px
.slide-menu__list-el
	display: block
	margin-bottom: 20px
	color white
	font-size: 16px
	tr(all)
	&:hover
		color $mark
	&:last-child
		margin-bottom: 0

.slide-row
	margin-bottom: 30px

.body-fix
	position: fixed!important
	overflow-Y: scroll!important
	width:100%!important

.cart-wrap--mobile
	+above(1281px)
		display: none

.cart-wrap--desktop
	+below(1280px)
		display none

// loc buble
.bubble-loc
	position: absolute
	top calc(100% + 10px)
	left 0
	background: white
	box-shadow 0 0 10px rgba(0, 0, 0, 0.1)
	border-radius 10px
	overflow hidden
	z-index 100
.bubble-loc__title
	padding: 15px 20px
	white-space nowrap
.bubble-loc__footer
	f()
.bubble-loc__footer--true
	color white
	background: $mark
	padding: 12px 30px
	cp()
	tr()
	&:hover
		background: darken($dark,10)
.bubble-loc__footer--false
	white-space nowrap
	background: $snow
	padding: 12px 30px
	cp()
	tr()
	&:hover
		background: darken($snow,5)
// loc buble === end

// header === end

// soc-row
.soc-row
	f()
.soc-row__el
	round()
	flex(mid)
	tr(all)
	margin-right: 10px
	size 40px
	background: $mark
	&:hover
		background: lighten($mark,10)
	.icon
		size 18px
		fill white
		&:last-child
			margin-right: 0
.soc-row--sm
	.soc-row__el
		size 20px
		margin-right: 5px
		.icon
			size 10px

// soc-row === end

// main slider
.main-slider
	margin-bottom: 0!important
	.slick-slide
		+below(1024px)
			height: auto
		+below(640px)
			margin: 0
		margin: 0 10px
		width: 1230px
		height: 315px
	.slick-center
		.main-slider__el-wrap
			&:before
				content ''
				opacity: 0
			opacity: 1!important
		width: 1230px
		//.main-slider__el
.main-slider .main-slider__el-wrap:not(:first-child)
	+above(768px)
		visibility: hidden

.main-slider.slick-initialized .main-slider__el-wrap:not(:first-child)
	visibility: visible

.main-slider__el
	+below(1024px)
		height auto
		padding: 20% 10%
	bg-full()
	tr()
	height: 315px
.main-slider__el-wrap
	tr()
	+below(1024px)
		margin: 0
		opacity: 1
	bg-full()
	position relative
	width: 100%
	opacity: .4
	tr()
	+above(1025px)
		&:before
			content ''
			position absolute
			top 0
			left 0
			width: 100%
			height: 100%
			tr()
			background:linear-gradient(90deg, rgba(255,255,255,0.5) 0%, rgba(255,255,255,.8) 15%, rgba(255,255,255,1) 65%, rgba(255,255,255,0.5) 100%);
			opacity: 1
.slick-dots
	+below(640px)
		bottom -25px
	width: 100%
	bottom 20px
	li
		size 10px
	.dot
		+below(640px)
			size 8px
			background: $mark
		background: white
		size 10px
		display: block
		round()
		opacity: .4
	.slick-active
		.dot
			opacity: 1

// === for custom navigation ===
//.slider-wrap
.slider-control-wrap
	width 100%
	position absolute
	top 50%

.slider-control-cont
	flex(between)

.slider-control
	flex(mid)
	tr(all)
	z-index 10
	size 30px
	cp()
	round()
	background: #111111ad
	&:hover
		background: $mark
		box-shadow: 0px 12px 32px rgba(41, 42, 53, 0.16);
	.icon
		fill white
		size 10px
//Навигация внутри
.slider-wrap--inarrow
	.slider-control
		+below(1580px)
			display none
		top 50%
		margin-top: -15px
	.slider-control--left
		transform translateX(-60px)
	.slider-control--right
		transform translateX(60px)
//Навигация внутри

// main slider === end

// product el
.product-wrap
	+below(640px)
		margin: 20px 0
	margin: 0 0 60px 0
	&:last-child
			margin-bottom: 0
.product-cont
	+below(1024px)
		grid-template-columns: repeat(4, 1fr)
		margin: 30px 0
		grid-gap 20px
	+below(768px)
		grid-gap 20px
		grid-template-columns: repeat(3, 1fr)
	+below(640px)
		grid-template-columns: repeat(2, 1fr)
		width: 100%
		grid-gap 10px
	+below(480px)
		f()
		margin: 0!important
		grid-template-columns: 1fr
	//flex(between)
	transform: translateZ(0);
