include block_html/_style.pug
include block_html/_include.pug

.page
	+header()
	.content
		.main-cont
			//pizza
			.item-wrap.mb-48
				.item-col
					.item-img(style="background-image:url('img/item-card-1.jpg')")
				// item-info
				.item-info
					.bread.mb-24
						a(href="#").bread__el Главная
						a(href="#").bread__el Каталог
						.bread__el Название пункта
					.title-row.mb-24
						.arrow(onclick="window.history.go(-1); return false;")
							+icon("arrow-conner-left","icon")
						.title.title--xl Четыре сыра
							.tooltip.tooltip--icon ?
								.tooltip-cont.tooltip-cont--bottom-center
									.tooltip-conner
									.consist
										.type--sm.type--bold.mb-12 Пищевая ценность:
										.consist__el
											.consist__el-name Жиры, г
											.consist__el-val 9.90
										.consist__el
											.consist__el-name Белки, г
											.consist__el-val 10.50
										.consist__el
											.consist__el-name Углеводы, г
											.consist__el-val 24.90
										.consist__el
											.consist__el-name Пищевая ценность, Ккал
											.consist__el-val 230.70
					.item-descr
						-
							var items = [
								'Сыр',
								'Пицца-соус',
								'Перец болгарский',
								'Куриное филе',
								'Моцарела',
								];
						each item in items
							.mix.js-toggle
								.mix__name #{item}
								.mix__icon
									+icon("close","icon icon--true")
									+icon("repeat","icon icon--false")
						each itemEl in items
							<span> #{itemEl}, </span>

					.item-config-wrap
						// size
						.item-size
							.size.size--mark.size--sm.size--fluid
								.size__el.size__el--active 15 см
								.size__el 30 см
								.size__el 45 см
						// size === end

						// size
						.item-size
							.size.size--mark.size--sm.size--fluid
								.size__el.size__el--active Супертесто
								.size__el Тонкое
						// size === end

						//item-config
						.title Дополнительные ингредиенты
						.item-config-row.js-ingr-wrap.scroll-template(data-min="0" data-max="3")
							- for (var i=0;i<4;i++)
								.item-prop.js-ingr-row
									.item-prop__img(style="background-image:url('img/prop-3.jpg')")
									.item-prop__title Томатний соус <span class="type--gray">/ 50г</span>
									.item-prop__incr
										+incr(false,"incr--single incr--mark-light incr--mdx")
									.item-prop__cost 29 р
								.item-prop.js-ingr-row
									.item-prop__img(style="background-image:url('img/prop-4.jpg')")
									.item-prop__title Сметана <span class="type--gray">/ 50г</span>
									.item-prop__incr
										+incr(false,"incr--single incr--mark-light incr--mdx")
									.item-prop__cost 34 р
								.item-prop.js-ingr-row
									.item-prop__img(style="background-image:url('img/prop-5.jpg')")
									.item-prop__title Чесночный соус <span class="type--gray">/ 50г</span>
									.item-prop__incr
										+incr(false,"incr--single incr--mark-light incr--mdx")
									.item-prop__cost 16 р
							.msg.msg--info.m-32.hidden
								// .msg--info || .msg--alert
								.msg-text Вы можете добавить до 6-ти доп. ингрединтов
						//  item-config === end

					.item-condition-wrap
						// item total
						.item-total.item-total--disable
							.item-total-wrap
								.item-total__info старая цена 299 р
								.item-total__cond
									.item-total__cost 250 р
									.item-total__weight 350 г
							.item-get
								.incr-btn.incr-btn--fix
									.incr-btn__el.btn--md.btn--mark Заказать
									.incr-btn-wrap
										+incr(1,"incr--mark")
						// item total === end

						// structure
						//.structure-wrap
							.structure
								.structure__el
									.structure__el-name калории
									.structure__el-val 2841
								.structure__el
									.structure__el-name белки
									.structure__el-val 75,4
								.structure__el
									.structure__el-name жиры
									.structure__el-val 111,5
								.structure__el
									.structure__el-name углеводы
									.structure__el-val 198,2
							.structure-text энергетическая ценность указана за 100 г
						// structure === end

				// item-info === end
			// recommend
			.title.title--lg Рекомендуем также
			.product-cont-row
				.product-cont
					- for (var i=0;i< 4;i++)
						+product()
			// recommend === end

	+footer()
include ./block_html/_script.pug
